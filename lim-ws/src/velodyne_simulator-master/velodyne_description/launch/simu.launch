<launch>
    <!-- 将 Urdf 文件的内容加载到参数服务器 -->
    <param name="robot_description" command="$(find xacro)/xacro $(find gazebo_env)/urdf/car.urdf.xacro" />

    <!-- 启动 gazebo -->
    <arg name="simu_name" default="box_house"/>
    <include file="$(find gazebo_ros)/launch/empty_world.launch" >
        <arg name = "world_name" value = "$(find gazebo_env)/worlds/$(arg simu_name).world" />
    </include>

    <!-- 在 gazebo 中显示机器人模型 -->
    <!-- <node pkg="gazebo_ros" type="spawn_model" name="model" args="-x -1.36 -y -1.26 -urdf -model mycar -param robot_description"  /> -->
    <node pkg="gazebo_ros" type="spawn_model" name="model" args="-x 0.0 -y 0.0 -urdf -model mycar -param robot_description"  />
</launch>
